var network=require("network").check;exports.geo=function(){Ti.Geolocation.getCurrentPosition(function(o){var e=Ti.Platform.osname;if("iphone"===e){if(Ti.Geolocation.AUTHORIZATION_AUTHORIZED)var t=o.coords.longitude,r=o.coords.latitude,n="http://api.wunderground.com/weather/api/8ad159642a519b70/conditions/astronomy/forecast/bestfct/q/"+r+","+t+".json";else alert("Cannot get your current location.");network(n)}else{var t="-71.0822085",r="41.9604969",n="http://api.wunderground.com/weather/api/8ad159642a519b70/conditions/astronomy/forecast/bestfct/q/"+r+","+t+".json";network(n)}})};